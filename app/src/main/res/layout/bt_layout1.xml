    <Button
        android:id="@+id/bt2"
        android:onClick="onClick"
        android:text="ContentResolver删除User数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt3"
        android:onClick="onClick"
        android:text="ContentResolver修改User数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt4"
        android:onClick="onClick"
        android:text="ContentResolver查询User数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt45"
        android:onClick="onClick"
